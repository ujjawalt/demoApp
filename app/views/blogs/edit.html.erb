<h1>Edit the Blog</h1>

<%= render 'errors' %>

<%= form_with(model: @blog, local: true, data: {turbo: false}) do |f| %>

    <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %> <br>
        <%= f.text_field :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<%end%>

<%= link_to "Cancle & return to all blogs", blogs_path %>