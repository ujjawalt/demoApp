<h1>Create Blog</h1>

<%= render 'errors' %>

<%= form_with scope: :blog, url: blogs_path, data: {turbo: false}, local: true do |f| %>

    <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %> <br>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<%end%>

<%= link_to "Return to all blogs", blogs_path %>